{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "build-backend",
        "rootDir": "."
    },
    "exclude": [
        "node_modules",
        "bower_components",
        "build-backend",
        "build-frontend",
        "doc",
        "src/frontend",
        "typings"
    ]
}
