  "dependencies": {
    "ini": "^1.3.4",
    
    "express": "^4.13.2",
    "morgan": "^1.6.1",
    "compression": "^1.5.2",
    "lodash": "^3.10.1",
    "pg": "^4.4.1",
    "mysql": "^2.8.0",
    "bower": "^1.4.1",
    "del": "^1.2.0",
    "gulp": "^3.9.0",
    "gulp-angular-templatecache": "^1.7.0",
    "gulp-changed": "^1.2.1",
    "gulp-clip-empty-files": "^0.1.1",
    "gulp-concat": "^2.6.0",
    "gulp-if": "^1.2.5",
    "gulp-minify-css": "^1.2.0",
    "gulp-ng-annotate": "^1.0.0",
    "gulp-server-livereload": "^1.4.0",
    "gulp-sourcemaps": "^1.5.2",
    "gulp-uglify": "^1.2.0",
    "http-server": "^0.8.0"    
  },
  "devDependencies": {
    "eslint": "^0.24.0",
    "doctoc": "^0.14.2"
  },
  "scripts": {
    "preinstall": "npm prune",
    "postinstall": "npm install src/wc-*",
    "start": "./index.js",
    
    "lint": "eslint -c .eslintrc $( find . -type f -name '*.js' | grep -v node_modules/ | grep -v gulpfile | grep -v build/ | grep -v bower_components/ )",
    "build": "npm install && npm run lint",
    "dev": "npm run build && npm start",
    "doctoc": "ls doc/*.md | xargs -L 1 doctoc --notitle"
  },
  "bin": {
    "webchatty": "index.js"
  }
